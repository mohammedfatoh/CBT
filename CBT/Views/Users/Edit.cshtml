@model ProfileFormViewModel

@{
    ViewData["Title"] = "Edit profile";
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <h4>Edit profile</h4>
    <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FullName" ></label>
                <input asp-for="FullName" class="form-control" placeholder="FullName"  maxlength="100"/>
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" ></label>
                <input asp-for="Age" class="form-control"  />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gendre" ></label> <br />
                <select asp-for="Gendre" 
                  asp-items="Html.GetEnumSelectList<GendreType>()">
                    <option   disabled selected>Please pick one</option>
                </select>
                <span asp-validation-for="Gendre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" ></label>
                <input asp-for="Email" class="form-control"  />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserName" ></label>
                <input asp-for="UserName" class="form-control"  maxlength="100"/>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <button   type="submit" class="btn btn-primary d-block mt-4">Sava</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}