@model AddUserViewModel

@{
    ViewData["Title"] = "Add New Doctor";
}

<form asp-action="Add" method="post" >
    <h4 style="color:white;text-align:center">Create a New Doctor</h4>
    <hr style="color:antiquewhite" />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group" style="display:inline-block;margin-right:150px">
                <label asp-for="FullName" style=" color:white;font-size:22px;margin-right:15px" ></label>
                <input asp-for="FullName" class="form-control" placeholder="FullName" style="display:inline;width:400px"  />
                <span asp-validation-for="FullName" class="text-danger" ></span>
            </div>
            <div class="form-group" style="display:inline-block">
                <label asp-for="Age" style=" color:white;font-size:22px;margin-right:30px"></label>
                <input asp-for="Age" class="form-control" style="display:inline;width:400px" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:inline-block;margin-right:150px">
                <label asp-for="Gendre" style=" color:white;font-size:22px;display:inline;margin-right:40px;border-radius:10px"></label> 
                <select asp-for="Gendre" style="display:inline;width:400px;height:35px" 
                  asp-items="Html.GetEnumSelectList<GendreType>()">
                    <option  disabled selected>Please pick one</option>
                </select>
                <span asp-validation-for="Gendre" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:inline-block">
                <label asp-for="Email" style=" color:white;font-size:22px;margin-right:15px" ></label>
                <input asp-for="Email" class="form-control" style="display:inline;width:400px" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:inline-block">
                <label asp-for="UserName" style=" color:white;font-size:22px;margin-right:15px"></label>
                <input asp-for="UserName" class="form-control" style="display:inline;width:400px" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group"  style="display:inline-block;margin-right:130px">
                <label asp-for="Password" style=" color:white;font-size:22px;display:inline;margin-right:20px"></label>
                <input asp-for="Password" class="form-control" style="display:inline;width:400px;" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:inline-block">
                 <label asp-for="ConfirmPassword" style=" color:white;font-size:22px;margin-right:15px">Confirm</label>
                <input asp-for="ConfirmPassword" class="form-control" style="display:inline;width:400px" />
                 <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <hr/>
            <h6 style=" color:white;font-size:30px;text-align:center">Roles</h6>
            
            @for (int i = 0; i < Model.Roles.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.Roles[i].RoleName" />
                    <input asp-for="@Model.Roles[i].isSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model.Roles[i].isSelected">
                        @Model.Roles[i].RoleName
                    </label>
                </div>
            }
            <span asp-validation-for="Roles" class="text-danger"></span>
            <button   type="submit" class="btn btn-primary d-block mt-4">Sava</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}